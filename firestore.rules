
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /villas/{villaId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /advertisements/{advertisementId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false; // Simplification: edits/deletes handled by app logic
    }

    match /managementPosts/{managementPostId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // Management login checked in app
      allow update, delete: if isSignedIn(); // Management login checked in app
    }

    match /complaints/{complaintId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Management login checked in app
      allow delete: if false;
    }

    match /emergencyContacts/{emergencyContactId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /approvedPhones/{approvedPhoneId} {
      allow get, list: if true; // Required for client-side checks
      allow write: if true; // Allow admin to write from the app
    }

    match /managementPasswords/{managementPasswordId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /martStatus/{martStatusId} {
      allow get, list: if true;
      allow write: if isSignedIn(); // Allow mart owner to update
    }

    match /namazTimings/{timingId} {
      allow get, list: if true;
      allow write: if isSignedIn(); // Allow admin to update
    }
  }
}
